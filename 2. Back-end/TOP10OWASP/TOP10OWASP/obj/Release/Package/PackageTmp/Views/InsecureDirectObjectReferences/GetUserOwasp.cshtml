@model TOP10OWASP.Models.USERACCOUNT

<div class="row">
    <div class="col-6 d-flex flex-column justify-content-lg-between">
        <div div class="welcome">Xin chào @Model.NAME</div>
        <a href="@Url.Action("Index", "InsecureDirectObjectReferences")">Trở lại trang</a>
    </div>
    <div class="col-6">
        <div class="profile">
            <p>Thông tin đăng nhập: </p>
            <p>Tài khoản: @Model.USERNAME</p>
            <p>Tài khoản: @Model.PASSWORD.Replace(Model.PASSWORD, "*")</p>
            <p>Tài khoản: @Model.NAME</p>
            <p>Tài khoản: @Model.ROLE</p>
        </div>
    </div>
</div>
